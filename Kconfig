mainmenu "Resea Build Configuration ($(ARCH))"

choice
    prompt "Build mode"
config BUILD_DEBUG
    bool "Debug"
config BUILD_RELEASE
    bool "Release"
endchoice

source "kernel/Kconfig"
source "libs/resea/Kconfig"

menu "Servers"
    config BOOTSTRAP
        string "The bootstrap server"
        default "bootstrap"

    source "servers/*/Kconfig"
endmenu

config NUM_SYMBOLS
    int "The (maximum) number of symbols."
    range 0 2048
    default 512

config NOMMU
    bool "Disable virtual memory"
    default n
